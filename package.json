{
  "name": "iso8601-duration",
  "version": "1.2.0",
  "description": "Node/Js-module for parsing and making sense of ISO8601-durations",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "jsnext:main": "lib/esnext/index.js",
  "scripts": {
    "lint": "eslint . --ext .ts && tsc --noEmit",
    "test": "npm run lint && ava",
    "start": "npm run watch",
    "watch": "npx nodemon --ext ts --watch src --watch test --exec \"npm run test && npm run compile\"",
    "compile": "npm run build:es2015 && npm run build:esnext",
    "build:es2015": "tsc -p tsconfig.es2015.json",
    "build:esnext": "tsc -p tsconfig.esnext.json",
    "prepublishOnly": "npm run compile",
    "patch-release": "npm test && npm version patch && git push --follow-tags"
  },
  "files": [
    "src/index.ts",
    "lib/index.js",
    "lib/esnext/index.js",
    "lib/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolu/ISO8601-duration.git"
  },
  "keywords": [
    "ISO8601",
    "duration",
    "time"
  ],
  "author": "Tobias Lundin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolu/ISO8601-duration/issues"
  },
  "homepage": "https://github.com/tolu/ISO8601-duration#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "ava": "^3.13.0",
    "eslint": "^7.14.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "ava": {
    "files": [
      "test/**/*"
    ],
    "extensions": ["ts"],
    "failFast": true,
    "verbose": true,
    "require": [
      "ts-node/register"
    ]
  }
}
